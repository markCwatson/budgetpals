{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "src/tests"],
    "lib": ["es2015"]
}
