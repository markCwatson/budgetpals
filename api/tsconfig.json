{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "types": ["jest"],
  },
  "include": ["src/**/*.ts", "src/*.ts", "test/**/*"],
  "exclude": ["node_modules"],
  "lib": ["es2015"]
}
